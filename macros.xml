<application>
  <component name="ActionMacroManager">
    <macro name="Format &amp; Save">
      <action id="ReformatCode" />
      <action id="SaveAll" />
    </macro>
    <macro name="Reformat + EslintFix">
      <action id="ReformatCode" />
    </macro>
    <macro name="ESlint + Save">
      <action id="Javascript.Linters.EsLint.Fix" />
      <action id="SaveAll" />
    </macro>
    <macro name="Reformat Prettier &amp; Save">
      <action id="ReformatWithPrettierAction" />
      <action id="SaveAll" />
    </macro>
    <macro name="Inspect Current File">
      <action id="InspectCode" />
    </macro>
    <macro name="Eslint + Prettier + SaveAll">
      <action id="Javascript.Linters.EsLint.Fix" />
      <action id="ReformatWithPrettierAction" />
      <action id="SaveAll" />
    </macro>
  </component>
</application>